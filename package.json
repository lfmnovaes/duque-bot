{
    "name": "duque-bot",
    "version": "0.0.1",
    "description": "A Discord bot with channel-scoped custom commands, Convex persistence, and owner management via DM.",
    "main": "dist/src/index.js",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc && mkdir -p dist/convex/_generated && cp convex/_generated/*.js dist/convex/_generated/",
        "start": "node dist/src/index.js",
        "deploy-commands": "tsx src/deploy-commands.ts",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "typecheck": "tsc --noEmit -p tsconfig.check.json"
    },
    "keywords": [
        "discord",
        "bot",
        "commands",
        "convex"
    ],
    "license": "MIT",
    "engines": {
        "node": ">=24.13.0"
    },
    "dependencies": {
        "convex": "^1.32.0",
        "discord.js": "^14.25.1",
        "dotenv": "^17.3.1"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.4.4",
        "@types/node": "^25.3.1",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    }
}
