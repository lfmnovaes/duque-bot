{
    "compilerOptions": {
        "target": "ES2024",
        "module": "Node16",
        "moduleResolution": "Node16",
        "lib": [
            "ES2024"
        ],
        "outDir": "dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*",
        "convex/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}